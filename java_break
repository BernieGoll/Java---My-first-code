public class Bern
{
    public static void main(String[] args)
    {
        int x =1;
        
        while(x > 0)
        {
            System.out.println(x);
            if(x == 7)
            {
                break;
            }
            x++;
        }
    }
}
// Output is: 1 2 3 4 5 6 7 (notice once 7 is reached the loop is terminated)
